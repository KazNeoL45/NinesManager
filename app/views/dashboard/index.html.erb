<div class="space-y-6 animate-fade-in">
  <div class="flex justify-between items-center animate-slide-down">
    <div>
      <h1 class="text-3xl font-semibold text-gray-900">Welcome back, <%= current_user.name.split.first %></h1>
      <p class="text-gray-600 mt-1">Here's what's happening with your projects</p>
    </div>
    <%= link_to new_project_path, class: "group px-6 py-3 font-semibold transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl flex items-center space-x-2", style: "background: linear-gradient(90deg, rgb(79, 70, 229) 0%, rgb(147, 51, 234) 100%); color: white; border-radius: 1rem;" do %>
      <svg class="w-5 h-5 transform group-hover:rotate-90 transition-transform duration-300" style="color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span>New Project</span>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer animate-slide-up" style="background: linear-gradient(135deg, rgb(59, 130, 246) 0%, rgb(37, 99, 235) 100%); border-radius: 1.5rem; animation-delay: 0.1s;">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium mb-2" style="color: rgba(255, 255, 255, 0.95);">Total Projects</div>
          <div class="text-4xl font-semibold" style="color: white;"><%= @projects.count %></div>
        </div>
        <div class="p-3" style="background: rgba(255, 255, 255, 0.2); border-radius: 1rem;">
          <svg class="w-8 h-8" style="color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer animate-slide-up" style="background: linear-gradient(135deg, rgb(34, 197, 94) 0%, rgb(22, 163, 74) 100%); border-radius: 1.5rem; animation-delay: 0.2s;">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium mb-2" style="color: rgba(255, 255, 255, 0.95);">Active Tasks</div>
          <div class="text-4xl font-semibold" style="color: white;"><%= @recent_tasks.count %></div>
        </div>
        <div class="p-3" style="background: rgba(255, 255, 255, 0.2); border-radius: 1rem;">
          <svg class="w-8 h-8" style="color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer animate-slide-up" style="background: linear-gradient(135deg, rgb(168, 85, 247) 0%, rgb(147, 51, 234) 100%); border-radius: 1.5rem; animation-delay: 0.3s;">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium mb-2" style="color: rgba(255, 255, 255, 0.95);">Completed</div>
          <div class="text-4xl font-semibold" style="color: white;"><%= @recent_tasks.where(status: 'done').count %></div>
        </div>
        <div class="p-3" style="background: rgba(255, 255, 255, 0.2); border-radius: 1rem;">
          <svg class="w-8 h-8" style="color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer animate-slide-up" style="background: linear-gradient(135deg, rgb(249, 115, 22) 0%, rgb(234, 88, 12) 100%); border-radius: 1.5rem; animation-delay: 0.4s;">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium mb-2" style="color: rgba(255, 255, 255, 0.95);">Your Role</div>
          <div class="text-2xl font-semibold capitalize" style="color: white;"><%= current_user.role %></div>
        </div>
        <div class="p-3" style="background: rgba(255, 255, 255, 0.2); border-radius: 1rem;">
          <svg class="w-8 h-8" style="color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Your Projects</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @projects.any? %>
        <% @projects.each do |project| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition">
            <%= link_to project, class: "block" do %>
              <div class="flex justify-between items-center">
                <div>
                  <h3 class="text-lg font-medium text-gray-900"><%= project.name %></h3>
                  <% if project.description.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= truncate(project.description, length: 100) %></p>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= pluralize(project.tasks.count, 'task') %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center">
          <p class="text-gray-500">No projects yet</p>
          <%= link_to "Create your first project", new_project_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @recent_tasks.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recent Tasks</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_tasks.each do |task| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-base font-medium text-gray-900"><%= task.title %></h3>
                <p class="text-sm text-gray-500 mt-1"><%= task.project.name %></p>
              </div>
              <span class="px-2 py-1 text-xs font-medium rounded <%= task.priority == 'urgent' ? 'bg-red-100 text-red-800' : task.priority == 'high' ? 'bg-orange-100 text-orange-800' : task.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                <%= task.priority %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }

  .animate-slide-down {
    animation: slide-down 0.6s ease-out;
  }

  .animate-slide-up {
    animation: slide-up 0.6s ease-out;
    opacity: 0;
    animation-fill-mode: forwards;
  }
</style>
