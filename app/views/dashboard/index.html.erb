<div class="space-y-10 animate-fade-in">

  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl text-gray-900">
        Welcome back, <%= current_user.name.split.first %>
      </h1>
      <p class="text-gray-600 mt-1">
        Here’s what’s happening with your projects
      </p>
    </div>

    <%= link_to new_project_path,
      class: "px-6 py-3 rounded-xl bg-gray-900 text-white/90 hover:bg-gray-800 transition backdrop-blur flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span>New Project</span>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

    <div class="rounded-2xl bg-white/50 backdrop-blur border border-white/60 p-6 transition hover:bg-white/70">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-sm text-gray-600 mb-2">Total Projects</p>
          <p class="text-4xl text-gray-900"><%= @projects.count %></p>
        </div>
        <div class="p-3 rounded-xl bg-white/60">
          <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-white/50 backdrop-blur border border-white/60 p-6 transition hover:bg-white/70">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-sm text-gray-600 mb-2">Active Tasks</p>
          <p class="text-4xl text-gray-900"><%= @recent_tasks.count %></p>
        </div>
        <div class="p-3 rounded-xl bg-white/60">
          <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-white/50 backdrop-blur border border-white/60 p-6 transition hover:bg-white/70">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-sm text-gray-600 mb-2">Completed</p>
          <p class="text-4xl text-gray-900"><%= @recent_tasks.where(status: 'done').count %></p>
        </div>
        <div class="p-3 rounded-xl bg-white/60">
          <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-white/50 backdrop-blur border border-white/60 p-6 transition hover:bg-white/70">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-sm text-gray-600 mb-2">Your Role</p>
          <p class="text-2xl capitalize text-gray-900"><%= current_user.role %></p>
        </div>
        <div class="p-3 rounded-xl bg-white/60">
          <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>

  </div>

  <div class="rounded-3xl bg-white/50 backdrop-blur border border-white/60 overflow-hidden">
    <div class="px-6 py-4 border-b border-white/60">
      <h2 class="text-xl text-gray-900">Your Projects</h2>
    </div>

    <% if @projects.any? %>
      <div class="divide-y divide-white/40">
        <% @projects.each do |project| %>
          <%= link_to project, class: "block px-6 py-4 hover:bg-white/60 transition" do %>
            <div class="flex justify-between items-center">
              <div>
                <p class="text-lg text-gray-900"><%= project.name %></p>
                <% if project.description.present? %>
                  <p class="text-sm text-gray-600 mt-1">
                    <%= truncate(project.description, length: 100) %>
                  </p>
                <% end %>
              </div>
              <p class="text-sm text-gray-500">
                <%= pluralize(project.tasks.count, 'task') %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-10 text-center">
        <p class="text-gray-500 mb-2">No projects yet</p>
        <%= link_to "Create your first project", new_project_path, class: "text-gray-900 hover:underline" %>
      </div>
    <% end %>
  </div>

  <% if @recent_tasks.any? %>
    <div class="rounded-3xl bg-white/50 backdrop-blur border border-white/60 overflow-hidden">
      <div class="px-6 py-4 border-b border-white/60">
        <h2 class="text-xl text-gray-900">Recent Tasks</h2>
      </div>

      <div class="divide-y divide-white/40">
        <% @recent_tasks.each do |task| %>
          <div class="px-6 py-4 hover:bg-white/60 transition">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-900"><%= task.title %></p>
                <p class="text-sm text-gray-600 mt-1"><%= task.project.name %></p>
              </div>
              <span class="px-3 py-1 rounded-full text-xs bg-white/70 text-gray-700 capitalize">
                <%= task.priority %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
