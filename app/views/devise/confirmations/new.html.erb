<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-rose-100 via-purple-100 to-indigo-200 px-6">
  <div class="w-full max-w-md">
    <div class="backdrop-blur-xl bg-white/40 rounded-3xl shadow-xl border border-white/50 px-10 py-12">
      <h2 class="text-3xl text-gray-900 mb-2 text-center">
        Resend Confirmation Instructions
      </h2>

      <p class="text-gray-600 mb-8 text-center">
        Enter your email address and we'll send you confirmation instructions
      </p>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="rounded-2xl bg-white/60 backdrop-blur border border-white/70 p-4 text-left text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
  </div>
<% end %>

        <div>
          <%= f.label :email, class: "block text-sm text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
        </div>

        <%= f.submit "Resend confirmation instructions", 
            class: "w-full mt-6 py-3 rounded-xl bg-gray-900 text-white/90 hover:bg-gray-800 transition backdrop-blur" %>
      <% end %>

      <div class="mt-6 text-center">
<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
