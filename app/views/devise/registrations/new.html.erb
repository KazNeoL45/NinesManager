<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-rose-100 via-purple-100 to-indigo-200 px-6">
  <div class="w-full max-w-2xl">

    <div class="backdrop-blur-xl bg-white/40 rounded-3xl shadow-xl border border-white/50 px-10 py-12 text-center">

      <h2 class="text-4xl text-gray-900 mb-2">
        Create Account
      </h2>

      <p class="text-gray-600 mb-10">
        Join Nines Manager to start collaborating
      </p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-8" }) do |f| %>

        <% if resource.errors.any? %>
          <div class="rounded-2xl bg-white/60 backdrop-blur border border-white/70 p-4 text-left text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5 text-left">

          <div>
            <%= f.label :name, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.text_field :name,
              autofocus: true,
              placeholder: "Full name",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.email_field :email,
              autocomplete: "email",
              placeholder: "Email address",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.password_field :password,
              autocomplete: "new-password",
              placeholder: "Password",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              placeholder: "Confirm password",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div class="md:col-span-2">
            <%= f.label :role, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.select :role,
              options_for_select([['Editor', 'editor'], ['Admin', 'admin'], ['Viewer', 'viewer']], 'editor'),
              {},
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

        </div>

        <%= f.submit "Create Account",
          class: "w-full mt-10 py-3 rounded-xl bg-gray-900 text-white/90 hover:bg-gray-800 transition backdrop-blur" %>

        <p class="text-sm text-gray-600 mt-8">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-gray-900 hover:underline" %>
        </p>

      <% end %>

    </div>

    <div class="text-center mt-6">
      <%= link_to "â† Back to Home", root_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
    </div>

  </div>
</div>
