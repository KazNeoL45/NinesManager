<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 animate-fade-in">
    <div class="bg-white rounded-2xl shadow-2xl p-8 transform transition-all duration-300 hover:shadow-3xl">
      <div class="text-center">
        <h2 class="text-4xl font-semibold text-gray-900 mb-2 animate-slide-down">Welcome Back</h2>
        <p class="text-gray-600 animate-slide-down animation-delay-100">Sign in to your account to continue</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="space-y-5">
          <div class="transform transition-all duration-200 focus-within:scale-105">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your email" %>
          </div>

          <div class="transform transition-all duration-200 focus-within:scale-105">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your password" %>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded transition-all duration-200 cursor-pointer" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700 cursor-pointer" %>
              </div>
            <% end %>

            <div class="text-sm">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500 transition-colors duration-200" %>
            </div>
          </div>
        </div>

        <div>
          <%= f.button "Sign In", type: "submit", class: "w-full py-3 px-4 text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg cursor-pointer" %>
        </div>

        <div class="text-center">
          <p class="text-sm text-gray-600">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500 transition-colors duration-200" %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="text-center animate-fade-in animation-delay-200">
      <%= link_to "â† Back to Home", root_path, class: "text-gray-600 hover:text-gray-900 transition-colors duration-200 text-sm" %>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }

  .animate-slide-down {
    animation: slide-down 0.6s ease-out;
  }

  .animation-delay-100 {
    animation-delay: 0.1s;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    opacity: 0;
    animation-fill-mode: forwards;
  }
</style>
