<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-rose-100 via-purple-100 to-indigo-200 px-6">
  <div class="w-full max-w-md">

    <div class="backdrop-blur-xl bg-white/40 rounded-3xl shadow-xl border border-white/50 px-10 py-12 text-center">

      <h2 class="text-4xl text-gray-900 mb-2">
        Welcome Back
      </h2>

      <p class="text-gray-600 mb-10">
        Sign in to your account to continue
      </p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

        <div class="space-y-5 text-left">

          <div>
            <%= f.label :email, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "Email address",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm text-gray-700 mb-2" %>
            <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "Password",
              class: "w-full px-4 py-3 rounded-xl bg-white/60 border border-white/70 text-gray-900 placeholder-gray-500 focus:outline-none focus:bg-white/80 transition backdrop-blur" %>
          </div>

          <div class="flex items-center justify-between text-sm">
            <% if devise_mapping.rememberable? %>
              <label class="flex items-center gap-2 text-gray-700">
                <%= f.check_box :remember_me, class: "rounded border-gray-300" %>
                Remember me
              </label>
            <% end %>

            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-gray-700 hover:text-gray-900 transition" %>
          </div>

        </div>

        <%= f.button "Sign In",
          type: "submit",
          class: "w-full mt-8 py-3 rounded-xl bg-gray-900 text-white/90 hover:bg-gray-800 transition backdrop-blur" %>

        <p class="text-sm text-gray-600 mt-8">
          Don’t have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-gray-900 hover:underline" %>
        </p>

      <% end %>

    </div>

    <div class="text-center mt-6">
      <%= link_to "← Back to Home", root_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
    </div>

  </div>
</div>
