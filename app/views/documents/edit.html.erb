<div class="max-w-4xl mx-auto space-y-6">
  <div>
    <h1 class="text-3xl text-gray-900">Edit Document</h1>
    <p class="text-gray-600 mt-1">Update the document content and details</p>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
    <%= form_with model: [@project, @document], class: "space-y-6" do |form| %>

      <div class="space-y-1">
        <%= form.label :title, class: "text-sm text-gray-700" %>
        <%= form.text_field :title,
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-black focus:border-black" %>
      </div>

      <div class="space-y-1">
        <%= form.label :content, class: "text-sm text-gray-700" %>
        <%= form.text_area :content,
          rows: 20,
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 font-mono text-sm focus:outline-none focus:ring-1 focus:ring-black focus:border-black" %>
      </div>

      <div class="flex items-center gap-3 pt-2">
        <%= form.submit "Update Document",
          class: "px-4 py-2 rounded-lg bg-black text-white hover:bg-gray-900 transition cursor-pointer" %>

        <%= link_to "Cancel",
          project_document_path(@project, @document),
          class: "px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition" %>
      </div>

    <% end %>
  </div>
</div>
