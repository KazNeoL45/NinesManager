<div class="max-w-4xl">
  <h1 class="text-3xl font-semibold text-gray-900 mb-6">Edit Document</h1>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with(model: [@project, @document], class: "space-y-6") do |form| %>
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :content, rows: 20, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm" %>
      </div>

      <div class="flex space-x-3">
        <%= form.submit "Update Document", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
        <%= link_to "Cancel", project_document_path(@project, @document), class: "px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition" %>
      </div>
    <% end %>
  </div>
</div>
