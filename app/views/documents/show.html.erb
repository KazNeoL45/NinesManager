<div class="max-w-4xl mx-auto space-y-6">
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
    <div class="flex justify-between items-start gap-6">
      <div class="flex-1 space-y-1">
        <h1 class="text-3xl text-gray-900"><%= @document.title %></h1>
        <p class="text-sm text-gray-600">
          Created by <%= @document.user.name %> on <%= @document.created_at.strftime('%B %d, %Y') %>
        </p>
      </div>

      <div class="flex items-center gap-2">
        <%= link_to "Edit",
          edit_project_document_path(@project, @document),
          class: "px-4 py-2 rounded-lg border border-gray-300 text-gray-900 hover:bg-gray-100 transition" %>

        <%= button_to "Delete",
          project_document_path(@project, @document),
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "px-4 py-2 rounded-lg border border-black text-black hover:bg-black hover:text-white transition" %>
      </div>
    </div>

    <div class="mt-8 prose max-w-none text-gray-900">
      <%= simple_format(@document.content) %>
    </div>
  </div>

  <div>
    <%= link_to "Back to Project",
      @project,
      class: "text-gray-700 hover:text-black transition" %>
  </div>
</div>
