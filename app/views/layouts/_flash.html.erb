<div id="flash-messages" class="fixed top-4 right-4 z-50 space-y-2 w-full max-w-sm">
  <% flash.each do |type, message| %>
    <% next if message.blank? %>
    <% css_classes = case type.to_s
        when 'notice' then 'bg-indigo-100 border-indigo-500 text-indigo-700'
        when 'alert', 'error' then 'bg-red-100 border-red-500 text-red-700'
        else 'bg-gray-100 border-gray-500 text-gray-700'
        end
    %>

    <div 
      data-controller="flash" 
      class="p-4 border-l-4 rounded-lg shadow-lg <%= css_classes %>" 
      role="alert"
    >
      <div class="flex items-center justify-between">
        <p class="font-medium text-sm"><%= message %></p>
        <button data-action="click->flash#close" class="ml-4 text-gray-500 hover:text-gray-700 transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>