<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>Nines Manager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full <%= user_signed_in? ? 'bg-gray-50' : '' %>">
    <% if user_signed_in? %>
      <nav class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <%= link_to "Nines Manager", dashboard_path, class: "flex items-center text-xl font-semibold text-gray-900" %>
              <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
                <%= link_to "Dashboard", dashboard_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 #{current_page?(dashboard_path) ? 'border-indigo-500' : 'border-transparent hover:border-gray-300'}" %>
                <%= link_to "Projects", projects_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 #{current_page?(projects_path) ? 'border-indigo-500' : 'border-transparent hover:border-gray-300'}" %>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <%= link_to edit_user_registration_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors duration-200" do %>
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span class="text-sm font-medium text-gray-700"><%= current_user.name %></span>
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center space-x-1 px-3 py-2 text-sm font-medium text-gray-700 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                <span>Sign Out</span>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <% if notice.present? %>
      <div class="bg-green-50 border-l-4 border-green-400 p-4 max-w-7xl mx-auto mt-4 <%= user_signed_in? ? 'mx-4' : '' %>">
        <p class="text-green-700"><%= notice %></p>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 max-w-7xl mx-auto mt-4 <%= user_signed_in? ? 'mx-4' : '' %>">
        <p class="text-red-700"><%= alert %></p>
      </div>
    <% end %>

    <main class="<%= user_signed_in? ? 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8' : '' %>">
      <%= yield %>
    </main>
  </body>
</html>
