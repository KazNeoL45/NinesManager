<div class="max-w-6xl mx-auto px-4">
  <div class="mb-10">
    <h1 class="text-3xl text-gray-900">Settings</h1>
    <p class="text-gray-600 mt-2">
      Manage your application settings and preferences
    </p>
  </div>

  <div class="grid gap-8">

    <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-xl border border-gray-200 overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl text-gray-900">Application Information</h2>
      </div>

      <div class="px-8 py-6 space-y-6">
        <div>
          <p class="text-xs text-gray-500 mb-1">Version</p>
          <p class="text-gray-900"><%= NinesManager::Application.version %></p>
        </div>

        <div class="pt-4 border-t border-gray-200 flex items-center justify-between">
          <div>
            <p class="text-gray-900">About Nines Manager</p>
            <p class="text-sm text-gray-600">Learn more about this application</p>
          </div>
          <%= link_to "View About", about_path,
            class: "px-5 py-2 rounded-xl bg-black text-white hover:opacity-80 transition" %>
        </div>
      </div>
    </div>

    <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-xl border border-gray-200 overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl text-gray-900">Projects</h2>
      </div>

      <div class="px-8 py-6 space-y-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-900">Owned Projects</p>
            <p class="text-sm text-gray-600">
              <%= current_user.owned_projects.count %> projects
            </p>
          </div>
          <%= link_to "View Projects", projects_path,
            class: "px-5 py-2 rounded-xl bg-black text-white hover:opacity-80 transition" %>
        </div>

        <div class="pt-4 border-t border-gray-200">
          <p class="text-gray-900">Member Projects</p>
          <p class="text-sm text-gray-600">
            <%= current_user.projects.count %> projects
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-xl border border-gray-200 overflow-hidden">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl text-gray-900">Danger Zone</h2>
      </div>

      <div class="px-8 py-6 flex items-center justify-between">
        <div>
          <p class="text-gray-900">Delete Account</p>
          <p class="text-sm text-gray-600">
            Permanently delete your account and all associated data
          </p>
        </div>
        <%= button_to "Delete Account", registration_path(current_user),
          method: :delete,
          data: { turbo_confirm: "Are you sure? This action cannot be undone." },
          class: "px-5 py-2 rounded-xl bg-black text-white hover:opacity-80 transition" %>
      </div>
    </div>

  </div>
</div>
