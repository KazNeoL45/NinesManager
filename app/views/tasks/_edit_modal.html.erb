<div id="editTaskModal"
     class="modal-overlay hidden"
     data-controller="modal"
     data-modal-target="overlay"
     data-action="keydown@window->modal#closeWithKeyboard click->modal#closeBackground">

  <div class="modal-container">
    <div class="modal-content rounded-3xl p-10 space-y-8">

      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <div class="space-y-1">
          <p class="text-sm text-gray-500">Editing task</p>
          <h2 class="text-2xl text-gray-900">
            <%= task.title %>
          </h2>
        </div>

        <button
          data-action="click->modal#close"
          class="text-black hover:opacity-70 transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="space-y-6">
        <%= render 'tasks/form', task: task, project: project %>
      </div>

    </div>
  </div>

</div>
