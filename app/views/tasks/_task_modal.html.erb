<div id="taskModal" class="modal-overlay hidden" 
     data-controller="modal" 
     data-modal-target="overlay"
     data-action="keydown@window->modal#closeWithKeyboard click->modal#closeBackground">
  <div class="modal-container">
    <div class="modal-content">
      <div class="flex items-center justify-between mb-6 border-b pb-3">
        <h2 class="text-2xl font-semibold text-gray-900"><%= task.title %></h2>
        <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="space-y-4">
        <div>
          <h3 class="font-medium text-gray-700">Description</h3>
          <p class="text-gray-900 whitespace-pre-wrap"><%= task.description.presence || 'No description provided.' %></p>
        </div>

        <div class="flex space-x-8">
          <div>
            <h3 class="font-medium text-gray-700">Priority</h3>
            <span class="px-2 py-1 text-sm font-medium rounded <%= task.priority == 'urgent' ? 'bg-red-100 text-red-800' : task.priority == 'high' ? 'bg-orange-100 text-orange-800' : task.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
              <%= task.priority.capitalize %>
            </span>
          </div>
          <% if task.due_date.present? %>
            <div>
              <h3 class="font-medium text-gray-700">Due Date</h3>
              <p class="text-gray-900"><%= task.due_date.strftime('%B %d, %Y') %></p>
            </div>
          <% end %>
        </div>

        <div>
          <h3 class="font-medium text-gray-700">Column</h3>
          <p class="text-gray-900"><%= task.column.name if task.column.present? %></p>
        </div>

        <div>
          <h3 class="font-medium text-gray-700">Assigned to</h3>
          <p class="text-gray-900"><%= task.user&.email || 'Unassigned' %></p>
        </div>
      </div>

      <div class="flex justify-end space-x-3 pt-6 border-t mt-6">
        <%= link_to 'Edit Task', edit_project_task_path(project, task), 
                    data: { turbo_frame: "modals" }, 
                    class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
                    
        <%= link_to 'Delete', project_task_path(project, task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task?' }, class: "px-4 py-2 text-red-600 bg-red-100 rounded-lg hover:bg-red-200 transition" %>
      </div>
    </div>
  </div>
</div>